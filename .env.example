
# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://mgnrega_user:password@localhost:5432/mgnrega

# Redis
REDIS_URL=redis://localhost:6379

# Data.gov.in API
DATAGOVIN_API_KEY=your_api_key_here
DATAGOVIN_BASE_URL=https://api.data.gov.in
MGNREGA_RESOURCE_ID=resource_id_from_datagov

# Object Storage (DigitalOcean Spaces or S3)
S3_ENDPOINT=nyc3.digitaloceanspaces.com
S3_BUCKET=mgnrega-data
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_BASE_URL=https://mgnrega-data.nyc3.digitaloceanspaces.com

# Security
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Monitoring (Optional)
SENTRY_DSN=https://xxx@sentry.io/xxx

# TTS
TTS_ENGINE=espeak-ng

# Logging
LOG_LEVEL=info