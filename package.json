{
  "name": "mgnrega-pwa",
  "version": "1.0.0",
  "description": "MGNREGA District Performance PWA for Uttar Pradesh",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w api\" \"npm run dev -w worker\" \"npm run dev -w web\"",
    "build": "npm run build --workspaces",
    "test": "npm test --workspaces",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "docker:dev": "docker-compose -f infrastructure/docker-compose.yml up",
    "docker:prod": "docker-compose -f infrastructure/docker-compose.prod.yml up -d"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}